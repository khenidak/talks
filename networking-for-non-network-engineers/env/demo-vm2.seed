#cloud-config
hostname: demo-vm2 
manage_resolv_conf: true
resolv_conf:
  nameservers: ['8.8.8.8']
users:
  - name: khenidak
    ssh-authorized-keys:
      - ssh-rsa  khenidak@xclusters 
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    groups: sudo
    shell: /bin/bash
package_upgrade: true
packages:
  - apt-transport-https
  - ca-certificates
  - dnsutils
  - net-tools
  - curl
  - socat

runcmd:
  - 'sudo echo 127.0.0.1 demo-vm2 >> /etc/hosts'
  - 'sudo systemctl daemon-reload'
